{
  "name": "@apibara/indexer",
  "version": "2.0.0",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./plugins": "./src/plugins/index.ts",
    "./sinks/sqlite": "./src/sinks/sqlite.ts",
    "./sinks/csv": "./src/sinks/csv.ts",
    "./testing": "./src/testing/index.ts"
  },
  "publishConfig": {
    "files": ["dist", "src", "README.md"],
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "default": "./dist/index.mjs"
      },
      "./sinks/sqlite": {
        "types": "./dist/sinks/sqlite.d.ts",
        "import": "./dist/sinks/sqlite.mjs",
        "default": "./dist/sinks/sqlite.mjs"
      },
      "./sinks/csv": {
        "types": "./dist/sinks/csv.d.ts",
        "import": "./dist/sinks/csv.mjs",
        "default": "./dist/sinks/csv.mjs"
      },
      "./testing": {
        "types": "./dist/testing/index.d.ts",
        "import": "./dist/testing/index.mjs",
        "default": "./dist/testing/index.mjs"
      }
    }
  },
  "scripts": {
    "build": "unbuild",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "lint:fix": "pnpm lint --write",
    "test": "vitest",
    "format": "biome format . --write"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "csv-stringify": "^6.5.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "unbuild": "^2.0.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@apibara/protocol": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "consola": "^3.2.3",
    "eventemitter3": "^5.0.1",
    "hookable": "^5.5.3",
    "klona": "^2.0.6",
    "nice-grpc": "^2.1.8",
    "unctx": "^2.3.1"
  },
  "peerDependencies": {
    "csv-stringify": "^6.5.0",
    "sqlite": "^5.1.1",
    "vitest": "^1.6.0"
  }
}
