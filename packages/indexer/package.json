{
  "name": "@apibara/indexer",
  "version": "2.0.0",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./plugins": "./src/plugins/index.ts"
  },
  "publishConfig": {
    "files": ["dist", "src", "README.md"],
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "default": "./dist/index.mjs"
      }
    }
  },
  "scripts": {
    "build": "unbuild",
    "test": "vitest",
    "test:typecheck": "vitest typecheck",
    "lint": "biome check .",
    "lint:fix": "pnpm lint --apply",
    "format": "biome format . --write"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@apibara/protocol": "workspace:*",
    "@opentelemetry/api": "^1.9.0",
    "consola": "^3.2.3",
    "eventemitter3": "^5.0.1",
    "hookable": "^5.5.3",
    "nice-grpc": "^2.1.8",
    "unctx": "^2.3.1"
  }
}
